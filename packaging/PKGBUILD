# Maintainer: Mirza Bicer <dev-mirzabicer@users.noreply.github.com>

pkgname=tree-txt
pkgver=0.1.0
pkgrel=1
pkgdesc="Interactive file selector and codebase exporter"
arch=('x86_64' 'aarch64')
url="https://github.com/dev-mirzabicer/tree-txt"
license=('MIT')
depends=()
makedepends=('rust' 'cargo')
source=("$pkgname-$pkgver.tar.gz::https://github.com/dev-mirzabicer/$pkgname/archive/v$pkgver.tar.gz")
sha256sums=('SKIP') # Update with actual checksum when publishing

build() {
    cd "$pkgname-$pkgver"
    cargo build --release --locked
}

check() {
    cd "$pkgname-$pkgver"
    cargo test --release --locked
}

package() {
    cd "$pkgname-$pkgver"
    install -Dm755 target/release/$pkgname "$pkgdir/usr/bin/$pkgname"
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
}